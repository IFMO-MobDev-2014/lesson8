<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.pinguinson.lesson10" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".activities.ForecastActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <provider
            android:name=".db.WeatherContentProvider"
            android:authorities="com.pinguinson.lesson10.db.WeatherContentProvider"
            android:enabled="true"
            android:exported="true" >
        </provider>

        <service
            android:name=".services.ForecastService"
            android:exported="false" >
        </service>

        <activity
            android:name=".activities.AddCityActivity"
            android:configChanges="orientation|screenSize"
            android:label="@string/title_activity_add_city"
            android:theme="@style/DialogTheme" >
        </activity>

        <service
            android:name=".services.AlarmService"
            android:exported="false" >
        </service>

        <receiver
            android:name=".services.AlarmReceiver"
            android:enabled="true"
            android:exported="false" >
        </receiver>

    </application>

</manifest>
