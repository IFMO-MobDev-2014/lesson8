<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="year2013.ifmo.weather" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="year2013.ifmo.weather.MenuActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <provider
            android:name="year2013.ifmo.weather.ForecastContentProvider"
            android:authorities="year2013.ifmo.weather.provider.forecast"
            android:enabled="true"
            android:exported="false" >
        </provider>

        <service
            android:name="year2013.ifmo.weather.DownloadingForecast"
            android:exported="false" >
        </service>

        <activity
            android:name="year2013.ifmo.weather.MainActivity"
            android:label="@string/app_name" >
        </activity>
    </application>

</manifest>
