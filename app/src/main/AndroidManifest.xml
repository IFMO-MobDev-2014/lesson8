<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ru.ifmo.md.lesson8" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="ru.ifmo.md.lesson8.MainActivity"
            android:label="@string/app_name"
            android:configChanges="orientation|screenSize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <provider
            android:name="ru.ifmo.md.lesson8.db.WeatherContentProvider"
            android:authorities="ru.ifmo.md.lesson8.db.WeatherContentProvider"
            android:enabled="true"
            android:exported="true" >
        </provider>

        <service
            android:name="ru.ifmo.md.lesson8.service.ForecastService"
            android:exported="false" >
        </service>

        <activity
            android:name="ru.ifmo.md.lesson8.AddCityActivity"
            android:label="@string/title_activity_add_city"
            android:theme="@style/DialogTheme"
            android:configChanges="orientation|screenSize">
        </activity>

        <service
            android:name="ru.ifmo.md.lesson8.service.AlarmStartService"
            android:exported="false" >
        </service>

        <receiver
            android:name="ru.ifmo.md.lesson8.service.AlarmReceiver"
            android:enabled="true"
            android:exported="false" >
        </receiver>
    </application>

</manifest>
