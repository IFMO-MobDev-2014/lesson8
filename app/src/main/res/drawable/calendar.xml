<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">
    <item app:state_morning="true">
        <shape>
            <gradient android:angle="-90" android:endColor="@android:color/transparent" android:startColor="#CC5500" />
        </shape>
    </item>
    <item app:state_daytime="true">
        <shape>
            <gradient android:angle="-90" android:endColor="@android:color/transparent" android:startColor="#2A52BE" />
        </shape>
    </item>
    <item app:state_evening="true">
        <shape>
            <gradient android:angle="-90" android:endColor="@android:color/transparent" android:startColor="#2A52BE" />
        </shape>
    </item>
    <!--item app:state_night="true" />
        <shape>
            <gradient android:startColor="#0f0f0f" android:endColor="@android:color/black" android:angle="-90" />
        </shape>
    </item-->
</selector>