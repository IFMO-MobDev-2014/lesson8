    tools:context="ru.ifmo.md.lesson8.CityDetailFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#ffe7f6df">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_margin="@dimen/internal_padding"
            android:background="@android:color/white">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/internal_padding"
                android:gravity="center"
                android:id="@+id/city_name"
                style="?android:attr/textAppearanceLarge"
                android:text="Saint-Petersburg"
                android:textIsSelectable="true"
                android:layout_marginTop="@dimen/internal_padding"
                android:background="#ffffbe00"
                android:textColor="@android:color/white"
                android:fontFamily="sans-serif" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/internal_padding"
                android:id="@+id/weather_desc"
                android:gravity="center"
                style="?android:attr/textAppearanceLarge"
                android:text="Party Cloudy"
                android:layout_marginLeft="@dimen/internal_padding"
                android:fontFamily="sans-serif-light" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_gravity="center_horizontal">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:padding="@dimen/internal_padding"
                    android:adjustViewBounds="true"
                    android:scaleType="fitXY"
                    android:src="@drawable/cloud_fog"
                    android:id="@+id/weather_icon"
                    android:contentDescription="@null"
                    android:layout_weight="0.7" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="0.8"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/internal_padding"
                    android:id="@+id/detail_temperature"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textSize="60sp"
                    style="?android:attr/textAppearanceLarge"
                    android:clickable="false"
                    android:fontFamily="sans-serif-thin"
                    android:text="-24&quot;" />

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:gravity="center_vertical">

                    <TextView
                        style="?android:attr/textAppearanceLarge"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:id="@+id/textView"/>

                    <TextView
