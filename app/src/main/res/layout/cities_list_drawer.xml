<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingBottom="10dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:layout_gravity="center_horizontal"
            android:text="@string/nav_drawer_cities_heading"
            android:textAllCaps="true"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/default_padding"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"/>

        <ImageButton
            android:id="@+id/current_location_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            style="@style/Widget.AppCompat.Light.ActionButton"
            android:background="@color/button_color_default"
            android:padding="5dp"
            android:layout_marginRight="5dp"
            android:src="@drawable/ic_action_location_found"
            android:layout_toLeftOf="@+id/add_new_city_button"
            android:layout_toStartOf="@+id/add_new_city_button"/>

        <ImageButton
            android:id="@+id/add_new_city_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            style="@style/Widget.AppCompat.Light.ActionButton"
            android:background="@color/button_color_default"
            android:padding="5dp"
            android:layout_marginLeft="5dp"
            android:src="@drawable/ic_action_new"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>

</LinearLayout>