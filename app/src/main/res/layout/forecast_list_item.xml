<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/forecast_item_container"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/default_padding"
    android:gravity="center_vertical">

    <ImageView
        android:id="@+id/forecast_condition_icon"
        android:layout_width="@dimen/weather_icon_side"
        android:layout_height="@dimen/weather_icon_side"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:paddingRight="@dimen/default_padding"
        android:src="@drawable/weather_42"/>

    <TextView
        android:id="@android:id/text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/default_city_name"
        android:paddingTop="4dp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/forecast_condition_icon"
        android:layout_toEndOf="@+id/forecast_condition_icon"
        android:textSize="@dimen/primary_list_item_text_size"
        android:textColor="@color/almost_white_grey"/>

    <TextView
        android:id="@android:id/text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/default_conditions"
        android:textColor="@color/almost_white_grey"
        android:layout_toRightOf="@+id/forecast_condition_icon"
        android:layout_toEndOf="@+id/forecast_condition_icon"
        android:layout_below="@android:id/text1"
        android:textSize="@dimen/secondary_list_item_text_size"/>

    <LinearLayout
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/forecast_temperatures"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true">

        <TextView
            android:textSize="20sp"
            android:id="@+id/low_temp"
            android:text="@string/default_temp"
            android:textColor="@color/almost_white_grey"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/temp_separator"
            android:textColor="@color/almost_white_grey"
            android:paddingRight="3dp"
            android:paddingLeft="3dp"/>

        <TextView
            android:textSize="20sp"
            android:id="@+id/high_temp"
            android:text="@string/default_temp"
            android:textColor="@color/almost_white_grey"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

</RelativeLayout>