<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="data"
        android:id="@+id/small_weather_data" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:id="@+id/small_weather_image" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1">

            <TextView
                style="@style/small_weather_text_style"
                android:id="@+id/small_weather_temperature" />
            <TextView
                style="@style/small_weather_text_style"
                android:id="@+id/small_weather_wind_speed" />
            <TextView
                style="@style/small_weather_text_style"
                android:id="@+id/small_weather_humidity" />
            <TextView
                style="@style/small_weather_text_style"
                android:id="@+id/small_weather_pressure" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>