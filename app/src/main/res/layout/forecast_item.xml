<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        style="?android:attr/textAppearanceLarge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".ItemDetailFragment"
        android:orientation="vertical"
        android:weightSum="0"
        android:gravity="center">
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/android_spaces"
            android:gravity="center"
            android:weightSum="0"
            android:textIsSelectable="true">
        <TextView
                android:layout_width="50sp"
                android:layout_height="50sp"
                android:padding="@dimen/android_spaces"
                android:text="27 Sep"
                android:background="@drawable/circle_date"
                android:gravity="center"
                style="@style/Content.UsualText"
                android:textColor="@android:color/white"
                android:textSize="12dp"
                android:id="@+id/date"/>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/android_spaces_small"
                android:layout_marginRight="@dimen/android_spaces_small"
                android:layout_weight="1"
                android:weightSum="2"
                android:gravity="center_vertical">
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="+28 °C"
                    android:padding="@dimen/android_spaces_small"
                    android:id="@+id/upper_temp"
                    android:layout_weight="1"
                    style="@style/Content.UsualText"
                    android:gravity="center"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="+14 °C"
                    android:padding="@dimen/android_spaces_small"
                    android:background="@color/grey"
                    android:id="@+id/lower_temp"
                    android:layout_weight="1"
                    style="@style/Content.UsualText"
                    android:gravity="center"/>
        </LinearLayout>
        <!--test-->
        <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="@dimen/android_spaces_small"
                android:src="@drawable/icon_sun"
                android:id="@+id/image_status"/>
    </LinearLayout>
    <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="visible"
            android:padding="@dimen/android_spaces_small"
            android:id="@+id/additional_table"
            android:layout_marginBottom="@dimen/android_spaces"
            android:gravity="center"
            android:shrinkColumns="*">
        <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:padding="@dimen/android_spaces_small"
                android:background="@color/grey"
                android:gravity="center">
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/android_spaces_small"
                    android:text="Cloudy auea"
                    style="@style/Content.SubTitleText"
                    android:id="@+id/weatherState"/>
            <LinearLayout>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/android_spaces_small"
                        android:text="@string/pressure_semicolon"
                        style="@style/Content.SubTitleText"/>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/android_spaces_small"
                        android:text="755 hPa"
                        style="@style/Content.SubTitleText"
                        android:id="@+id/pressure"/>
            </LinearLayout>
        </TableRow>
        <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@color/grey"
                android:padding="@dimen/android_spaces_small"
                android:gravity="center">
            <LinearLayout>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/android_spaces_small"
                        android:text="@string/humidity_semicolon"
                        style="@style/Content.SubTitleText"/>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/android_spaces_small"
                        android:text="34%"
                        style="@style/Content.SubTitleText"
                        android:id="@+id/humidity"/>
            </LinearLayout>
            <LinearLayout>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/android_spaces_small"
                        android:text="@string/wind_semicolon"
                        style="@style/Content.SubTitleText"/>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/android_spaces_small"
                        android:text="25 m/s NW"
                        style="@style/Content.SubTitleText"
                        android:id="@+id/wind"/>
            </LinearLayout>
        </TableRow>
    </TableLayout>
</LinearLayout>