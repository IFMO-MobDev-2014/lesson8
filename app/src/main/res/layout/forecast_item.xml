<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/forecast_container"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/default_padding"
    android:gravity="center_vertical"
    android:background="@android:color/white">
    <ImageView
        android:id="@+id/forecast_cond_icon"
        android:layout_width="@dimen/weather_icon_side"
        android:layout_height="@dimen/weather_icon_side"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:paddingRight="@dimen/default_padding"
        android:paddingEnd="@dimen/default_padding"
        android:src="@drawable/weather_na"/>

    <TextView
        android:id="@android:id/text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="4dp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/forecast_cond_icon"
        android:layout_toEndOf="@+id/forecast_cond_icon"
        android:textSize="@dimen/primary_list_item_text_size"
        android:textColor="@android:color/black"/>
    <TextView
        android:id="@android:id/text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/forecast_cond_icon"
        android:layout_toEndOf="@+id/forecast_cond_icon"
        android:layout_below="@android:id/text1"
        android:textSize="@dimen/secondary_list_item_text_size"/>
    <LinearLayout
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/forecast_temperatures"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true">
        <TextView
            android:textSize="20sp"
            android:id="@+id/low_temp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/long_dash"
            android:paddingRight="3dp"
            android:paddingLeft="3dp"/>
        <TextView
            android:textSize="20sp"
            android:id="@+id/high_temp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
</RelativeLayout>