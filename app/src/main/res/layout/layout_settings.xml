<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="fill_horizontal"
        android:orientation="vertical">


        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/internal_padding"
            android:fontFamily="sans-serif-thin"
            android:text="Choose frequency of updates:"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <RadioGroup
            android:id="@+id/radio_group"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/internal_padding"
            android:layout_marginLeft="@dimen/internal_padding"
            android:layout_marginRight="@dimen/internal_padding"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/rb_manually"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="Manually" />

            <RadioButton
                android:id="@+id/rb_halfhour"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="false"
                android:text="Half an hour" />

            <RadioButton
                android:id="@+id/rb_hour1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="false"
                android:text="1 hour" />

            <RadioButton
                android:id="@+id/rb_hour2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="false"
                android:text="2 hours" />

            <RadioButton
                android:id="@+id/rb_hour6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="false"
                android:text="6 hours" />

            <RadioButton
                android:id="@+id/rb_hour12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="false"
                android:text="12 hours" />

            <RadioButton
                android:id="@+id/rb_hour24"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="false"
                android:text="24 hours" />
        </RadioGroup>

        <Button
            android:id="@+id/bn_accept"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/internal_padding"
            android:onClick="acceptClicked"
            android:text="Accept" />

    </LinearLayout>

</ScrollView>