<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:background="#ffb8dcff"
    android:layout_height="fill_parent"
    android:weightSum="17"
    android:id="@+id/frag_weather"
    tools:context="ru.ifmo.md.lesson8.WeatherDetailsFragment">

    <TextView
        android:id="@+id/name"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:textSize="40sp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/primary_dark_material_dark"
        android:textStyle="bold" />


    <LinearLayout
        android:layout_width="fill_parent"
        android:orientation="horizontal"
        android:layout_weight="3"
        android:weightSum="3"
        android:layout_height="0dp">

        <ImageView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="fill_parent"
            android:id="@+id/currImg" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="1"
            android:textAppearance="?android:attr/textAppearanceListItem"
            android:layout_width="0dp"
            android:weightSum="4"
            android:layout_height="fill_parent">


            <TextView
                android:layout_width="fill_parent"
                android:textColor="@color/primary_dark_material_dark"
                android:layout_height="0dp"
                android:textStyle="bold"
                android:layout_weight="1"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text=" Feels like:"
                android:id="@+id/text" />

            <TextView
                android:textColor="@color/primary_dark_material_dark"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/currDate" />

            <TextView
                android:textColor="@color/primary_dark_material_dark"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:layout_gravity="center"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/currTmp" />

        </LinearLayout>

        <TextView
            android:layout_width="0dp"
            android:textColor="@color/primary_dark_material_dark"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:textSize="60sp"
            android:id="@+id/feel" />


    </LinearLayout>

    <TextView
        android:textColor="@color/primary_dark_material_dark"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:textSize="20sp"
        android:gravity="center"
        android:textStyle="bold"
        android:text="@string/hourly"
        android:id="@+id/textView13" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:weightSum="4"
        android:layout_weight="4">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:weightSum="5"
            android:layout_height="fill_parent">

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="4"
                android:id="@+id/hourImg1" />

            <TextView
                android:textColor="@color/primary_dark_material_dark"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/hour1" />

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:weightSum="5"
            android:layout_height="fill_parent">

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="4"
                android:id="@+id/hourImg2" />

            <TextView
                android:textColor="@color/primary_dark_material_dark"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/hour2" />

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:weightSum="5"
            android:layout_height="fill_parent">

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="4"
                android:id="@+id/hourImg3" />

            <TextView
                android:textColor="@color/primary_dark_material_dark"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/hour3" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:weightSum="5"
            android:layout_height="fill_parent">

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="4"
                android:id="@+id/hourImg4" />

            <TextView
                android:textColor="@color/primary_dark_material_dark"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/hour4" />

        </LinearLayout>
    </LinearLayout>

    <TextView
        android:textColor="@color/primary_dark_material_dark"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_weight="1"
        android:text="@string/naxt"
        android:gravity="center"
        android:id="@+id/textView12" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:weightSum="3"
        android:layout_weight = "6">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:weightSum="8"
            android:layout_height="fill_parent">

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="6"
                android:id="@+id/nextImg1" />

            <TextView
                android:textColor="@color/primary_dark_material_dark"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/min1" />

            <TextView
                android:textColor="@color/primary_dark_material_dark"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/max1" />

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:weightSum="8"
            android:layout_height="fill_parent">

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="6"
                android:id="@+id/nextImg2" />

            <TextView
                android:textColor="@color/primary_dark_material_dark"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/min2" />

            <TextView
                android:textColor="@color/primary_dark_material_dark"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/max2" />

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:weightSum="8"
            android:layout_height="fill_parent">

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="6"
                android:id="@+id/nextImg3" />

            <TextView
                android:textColor="@color/primary_dark_material_dark"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/min3" />

            <TextView
                android:textColor="@color/primary_dark_material_dark"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/max3" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>
