<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1">
        <FrameLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="0dp">

            <ImageView
                    android:id="@+id/background"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/background_clouds_2"/>
            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="top|left|start"
                    android:layout_marginStart="@dimen/android_spaces_large"
                    android:layout_marginEnd="@dimen/android_spaces_large"
                    android:layout_marginLeft="@dimen/android_spaces_large"
                    android:layout_marginRight="@dimen/android_spaces_large"
                    android:layout_marginTop="@dimen/android_spaces"
                    android:gravity="right">

                <TextView
                        android:id="@+id/title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Cityname"
                        style="@style/Header.TitleText"/>

                <TextView
                        android:id="@+id/subtitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:text="Loading.."
                        style="@style/Header.SubTitleText"/>
            </LinearLayout>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+28 Â°C"
                    android:layout_gravity="bottom|right"
                    android:padding="@dimen/android_spaces"
                    android:layout_marginRight="@dimen/android_spaces"
                    android:id="@+id/upper_temp"
                    android:layout_weight="1"
                    style="@style/Header.BigThinText"
                    android:gravity="center"/>

            <!--<View-->
            <!--android:id="@android:id/title"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_gravity="bottom"-->
            <!--android:layout_height="10dp"-->
            <!--android:background="@drawable/white_grad" />-->

        </FrameLayout>

        <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/android_spaces_small"
                android:layout_margin="@dimen/android_spaces"
                android:padding="@dimen/android_spaces"
                android:background="@color/grey"
                android:gravity="center"
                android:layout_marginRight="@dimen/android_spaces_small">

            <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:gravity="center">
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/android_spaces"
                        android:text="@string/cloudness_semicolon"
                        style="@style/Content.SubTitleText"/>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="60%"
                        style="@style/Content.SubTitleText"
                        android:id="@+id/clouds"/>
            </TableRow>
            <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:gravity="center">
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/android_spaces"
                        android:text="@string/wind_semicolon"
                        style="@style/Content.SubTitleText"/>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2 m/s, SW"
                        style="@style/Content.SubTitleText"
                        android:id="@+id/wind"/>
            </TableRow>
            <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:gravity="center">
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/android_spaces"
                        android:text="@string/pressure_semicolon"
                        style="@style/Content.SubTitleText"/>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="762 mm/r"
                        style="@style/Content.SubTitleText"
                        android:id="@+id/pressure"/>
            </TableRow>
            <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:gravity="center">
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/android_spaces"
                        android:text="@string/humidity_semicolon"
                        style="@style/Content.SubTitleText"/>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="38%"
                        style="@style/Content.SubTitleText"
                        android:id="@+id/humidity"/>
            </TableRow>
        </TableLayout>
    </LinearLayout>
    <ListView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:id="@+id/forecast_list"
            android:layout_gravity="center_horizontal"
            android:layout_weight="3"/>
</LinearLayout>
